{
	"doxdocgen.generic.useGitUserName": true,
	"doxdocgen.generic.useGitUserEmail": true,
	"doxdocgen.file.versionTag": "@version 1.0.0-init",
	"doxdocgen.generic.includeTypeAtReturn": true,

	"doxdocgen.c.firstLine": "/**",
	"doxdocgen.c.commentPrefix": " * ",
	"doxdocgen.c.lastLine": " */",

	"doxdocgen.file.copyrightTag": [
		"@copyright Copyright (c) {year}"
	],

	"cmake.configureOnEdit": false,
	"cmake.configureOnOpen": false,
	"cmake.automaticReconfigure": false,
	"cmake.sourceDirectory": "${workspaceFolder}",
	"cmake.buildDirectory": "${workspaceFolder}/out/mingw64",
	"cmake.installPrefix": "${workspaceFolder}/out/mingw64/local",
	"cmake.cmakePath": "C:\\msys64\\ucrt64\\bin\\cmake.exe",
	// "rc-script.fullPathToEditor": "C:\\msys64\\clang64\\bin\\llvm-rc.exe",
	"cmake.configureArgs": [
		"-DCMAKE_TOOLCHAIN_FILE:FILEPATH=${workspaceFolder}/share/cmake/Toolchains/MINGW64.cmake"
	],
	"cmake.generator": "MinGW Makefiles",
	// "cmake.generator": "Ninja",
	// "cmake.preferredGenerators": ["Unix Makefiles"],
	// "cmake.configureSettings": {
	// 	"CMAKE_MAKE_PROGRAM": "${command:cmake.buildkit.generator.exe}",
	// },

	"C_Cpp.autoAddFileAssociations": true,

	"C_Cpp.default.cStandard": "c17",
	"C_Cpp.default.cppStandard": "c++17",

	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

	// "C_Cpp.clang_format_path": "C:/msys64/usr/bin/clang-format.exe",
	"C_Cpp.formatting": "clangFormat",
	"C_Cpp.clang_format_style": "file",
	"C_Cpp.clang_format_fallbackStyle": "Microsoft",
	"C_Cpp.clang_format_sortIncludes": true,

	"C_Cpp.codeAnalysis.clangTidy.enabled": true,
	"C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
		// "bugprone-*",
		// "clang-analyzer-*",
		// "concurrency-*",
		// "cppcoreguidelines-*",
		// "readability-*"
	],
	"C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
		// "*"
		"abseil-*",
		"altera-*",
		"android-*",
		"clang-analyzer-optin.osx.*",
		"clang-analyzer-osx.*",
		"darwin-*",
		"fuchsia-*",
		"google-*",
		"hicpp-*",
		"linuxkernel-must-use-errs",
		"llvm-*",
		"llvmlibc-*",
		"misc-*",
		"mpi-*",
		"objc-*",
		"openmp-*",

		"bugprone-easily-swappable-parameters",
		"bugprone-reserved-identifier",
		"cppcoreguidelines-avoid-non-const-global-variables",
		"cppcoreguidelines-macro-usage",
		"cppcoreguidelines-non-private-member-variables-in-classes",
		"cppcoreguidelines-pro-type-reinterpret-cast",
		"modernize-use-auto",
		"modernize-use-nullptr",
		"modernize-use-nodiscard",
		"modernize-use-trailing-return-type",
		"performance-no-int-to-ptr",
		"readability-convert-member-functions-to-static",
		"readability-identifier-length"
	],

	"C_Cpp.intelliSenseEngine": "default",
	"C_Cpp.intelliSenseEngineFallback": "disabled",
	"C_Cpp.intelliSenseCacheSize": 5120,
	"C_Cpp.intelliSenseMemoryLimit": 4096,
	"C_Cpp.intelliSenseCachePath": "${workspaceFolder}/.cache/vscode-cpptools/",

	"C_Cpp.default.browse.databaseFilename": "${workspaceFolder}/.vscode/browse/.browse.vc.db",
	"C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
	"C_Cpp.default.browse.path": [
		"${workspaceFolder}/include"
	],

	"C_Cpp.default.includePath": [
		"${workspaceFolder}/include/**"
	],

	"C_Cpp.files.exclude": {
		"**/.vscode": true,
		"**/.vs": true,
		"**/backup": true
	},

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},

	"files.associations": {
		"*.clang-format": "yaml",
		"*.clang-tidy": "yaml",
		"array": "cpp",
		"atomic": "cpp",
		"bit": "cpp",
		"*.tcc": "cpp",
		"cctype": "cpp",
		"clocale": "cpp",
		"cmath": "cpp",
		"compare": "cpp",
		"concepts": "cpp",
		"cstdarg": "cpp",
		"cstddef": "cpp",
		"cstdint": "cpp",
		"cstdio": "cpp",
		"cstdlib": "cpp",
		"cstring": "cpp",
		"cwchar": "cpp",
		"cwctype": "cpp",
		"deque": "cpp",
		"string": "cpp",
		"unordered_map": "cpp",
		"vector": "cpp",
		"exception": "cpp",
		"algorithm": "cpp",
		"functional": "cpp",
		"iterator": "cpp",
		"memory": "cpp",
		"memory_resource": "cpp",
		"numeric": "cpp",
		"optional": "cpp",
		"random": "cpp",
		"string_view": "cpp",
		"system_error": "cpp",
		"tuple": "cpp",
		"type_traits": "cpp",
		"utility": "cpp",
		"initializer_list": "cpp",
		"iosfwd": "cpp",
		"iostream": "cpp",
		"istream": "cpp",
		"limits": "cpp",
		"new": "cpp",
		"numbers": "cpp",
		"ostream": "cpp",
		"sstream": "cpp",
		"stdexcept": "cpp",
		"streambuf": "cpp",
		"cinttypes": "cpp",
		"typeinfo": "cpp",
		"condition_variable": "cpp",
		"ctime": "cpp",
		"list": "cpp",
		"map": "cpp",
		"ratio": "cpp",
		"mutex": "cpp",
		"semaphore": "cpp",
		"stop_token": "cpp",
		"thread": "cpp"
	},

	"terminal.integrated.profiles.windows": {
		"MSYS2 UCRT64": {
			"path": "cmd.exe",
			"args": [
				"/c",
				"C:\\msys64\\msys2_shell.cmd -defterm -here -no-start -ucrt64"
			]
		}
	}
}
